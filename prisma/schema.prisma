generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // Uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // Uses direct connection
}

model Tenant {
  id        String   @id @default(cuid())
  name      String
  industry  String?
  vapiKey   String?
  phoneNumber String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users     User[]
  agents    Agent[]
  leads     Lead[]
  workflows Workflow[]
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  clerkId   String?  @unique
  name      String?
  role      String   @default("MEMBER") 
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Agent {
  id            String   @id @default(cuid())
  name          String
  status        String   @default("DRAFT")
  vapiAgentId   String?
  config        String?  // Changed from Json to String
  tenantId      String
  tenant        Tenant   @relation(fields: [tenantId], references: [id])
  workflows     Workflow[]
  calls         CallLog[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Workflow {
  id        String   @id @default(cuid())
  name      String
  trigger   String   
  nodes     String   // Changed from Json to String
  edges     String   // Changed from Json to String
  isActive  Boolean  @default(false)
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  agentId   String?
  agent     Agent?   @relation(fields: [agentId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Lead {
  id          String   @id @default(cuid())
  firstName   String?
  lastName    String?
  email       String?
  phone       String?
  status      String   @default("NEW")
  tags        String   // Changed from String[] to String
  customData  String?  // Changed from Json to String
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
  calls       CallLog[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CallLog {
  id          String   @id @default(cuid())
  direction   String   
  status      String   
  duration    Int?     
  recordingUrl String?
  transcript  String?  // Removed @db.Text
  summary     String?  // Removed @db.Text
  outcome     String?
  agentId     String?
  agent       Agent?   @relation(fields: [agentId], references: [id])
  leadId      String?
  lead        Lead?    @relation(fields: [leadId], references: [id])
  createdAt   DateTime @default(now())
}
