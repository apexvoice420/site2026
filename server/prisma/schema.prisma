generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id          String     @id @default(cuid())
  name        String
  industry    String?
  vapiKey     String?
  phoneNumber String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  agents      Agent[]
  calls       CallLog[]
  leads       Lead[]
  users       User[]
  workflows   Workflow[]
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("MEMBER")
  tenantId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tenant    Tenant   @relation(fields: [tenantId], references: [id])

  @@index([tenantId])
}

model Agent {
  id          String     @id @default(cuid())
  name        String
  status      String     @default("DRAFT")
  vapiAgentId String?
  phoneNumber String?  // VAPI phone number this agent answers (e.g., +13865595733)
  voiceId     String?  // VAPI voice ID for TTS
  config      String?  // JSON string for agent configuration
  tenantId    String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  tenant      Tenant     @relation(fields: [tenantId], references: [id])
  calls       CallLog[]
  workflows   Workflow[]

  @@index([tenantId])
  @@index([phoneNumber])
}

model Workflow {
  id        String   @id @default(cuid())
  name      String
  trigger   String
  nodes     String
  edges     String
  isActive  Boolean  @default(false)
  tenantId  String
  agentId   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  agent     Agent?   @relation(fields: [agentId], references: [id])
  tenant    Tenant   @relation(fields: [tenantId], references: [id])

  @@index([tenantId])
}

model Lead {
  id         String    @id @default(cuid())
  firstName  String?
  lastName   String?
  email      String?
  phone      String?
  status     String    @default("NEW")
  tags       String    @default("")
  customData String?
  tenantId   String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  calls      CallLog[]
  tenant     Tenant    @relation(fields: [tenantId], references: [id])

  @@index([tenantId])
  @@index([phone])
  @@index([status])
}

model CallLog {
  id           String   @id @default(cuid())
  direction    String
  status       String
  duration     Int?
  recordingUrl String?
  transcript   String?
  summary      String?
  outcome      String?
  vapiCallId   String?
  agentId      String?
  leadId       String?
  tenantId     String
  createdAt    DateTime @default(now())
  agent        Agent?   @relation(fields: [agentId], references: [id])
  lead         Lead?    @relation(fields: [leadId], references: [id])
  tenant       Tenant   @relation(fields: [tenantId], references: [id])

  @@index([tenantId])
  @@index([leadId])
  @@index([createdAt])
}
